{
  "name": "hello-world-action",
  "version": "0.0.0",
  "private": true,
  "description": "Hello World action",
  "main": "lib/src/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "graphql-codegen": "graphql-codegen --config graphql-codegen.yaml",
    "generate": "yarn graphql-codegen && yarn format && yarn build && yarn package",
    "all": "yarn build && yarn format && yarn lint && yarn package && yarn test"
  },
  "dependencies": {
    "@actions/core": "1.2.7",
    "@actions/github": "5.0.0",
    "@actions/glob": "0.1.1",
    "graphql": "15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/import-types-preset": "1.18.2",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@octokit/graphql-schema": "10.39.1",
    "@types/jest": "26.0.23",
    "@types/node": "14.17.1",
    "@typescript-eslint/parser": "4.25.0",
    "@vercel/ncc": "0.28.6",
    "eslint": "7.27.0",
    "eslint-plugin-github": "4.1.3",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.2",
    "jest-circus": "27.0.2",
    "js-yaml": "4.1.0",
    "prettier": "2.3.0",
    "ts-jest": "27.0.1",
    "typescript": "4.3.2"
  }
}
